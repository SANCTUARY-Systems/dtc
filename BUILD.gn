config("libfdt_config") {
  visibility = [ ":gtest" ]
  include_dirs = [
    "libfdt",
    "peregrine_inc",
  ]
  cflags = [
    "-Wno-zero-length-array",
    "-Wno-extra-semi",
  ]
}

source_set("libfdt") {
  sources = [
    "libfdt/fdt.c",
    "libfdt/fdt_addresses.c",
    "libfdt/fdt_ro.c",
    "libfdt/fdt_rw.c",
    "libfdt/fdt_wip.c",
  ]

  # Add config to targets which directly depend on this one, not recursively.
  public_configs = [ ":libfdt_config" ]
}
